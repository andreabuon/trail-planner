select json_build_object('utente', username, 'password', password) from utenti

select json_build_object('parco', parco_nome, 'sigla', sigla, 'nome', nome, 'lunghezza', lunghezza, 'dislivello', dislivello, 'difficolta', difficolta) from sentieri

select array_agg(json_build_object('parco', parco_nome, 'sigla', sigla, 'nome', nome, 'lunghezza', lunghezza, 'dislivello', dislivello, 'difficolta', difficolta)) from sentieri


TROVATA
select json_agg(sentieri.*) from sentieri


